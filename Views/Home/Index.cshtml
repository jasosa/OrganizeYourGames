@model IEnumerable<OrganizeYourGames.Models.Game>
@addTagHelper *, OrganizeYourGames
@{
    ViewData["Title"] = "Home Page";
}

<style>

    .hover12 figure {
        background: #1abc9c;
    }

        .hover12 figure img {
            opacity: 1;
            -webkit-transition: .3s ease-in-out;
            transition: .3s ease-in-out;
        }

        .hover12 figure:hover img {
            opacity: .5;
        }

    .box {
        border: 1px solid white
    }
</style>

<div class="text-center">
    <h1 class="section-title text-left">Latest games added</h1>
    <div class="grid-container">        
        @foreach (var v in Model)
        {
        <div class="card hover12">
            <figure>
                <img src="/images/@(v.ImagePath).png" alt="@v.Name" style="width:100%">
            </figure>
            <div class="card-body">
                <h5 class="card-title">@v.Name</h5>
                <p class="card-text">Inserts/Organizers: @v.NumberOfOrganizers</p>
            </div>   
        </div>
            }
        </div>
    <vc:latest-inserts></vc:latest-inserts>
</div>
